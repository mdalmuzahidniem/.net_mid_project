@model IEnumerable<dot_net_mid_project.Models.Application>
@{
    ViewBag.Title = "Application History";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<style>
    #frm {
        width: 1000px;
        margin: 20px 190px;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px cyan;
        background-color: transparent;
        color: #34495e;
    }
</style>

<h2 align="center"class="text text-dark">Application History and status</h2>
<table id="frm" class="table table-bordered">
    <tr style="width: 145px; height: 45px; font-size: 20px;" class="text text-primary">
        <td>Application Discription</td>
        <td>Leave Start date</td>
        <td>Leave End Date</td>
        <td>Status</td>
    </tr>
    @foreach (var item in Model)
    {
    <tr style="width: 145px; height: 45px; font-size: 20px;" class="text text-info">
        <td>@item.application_subject</td>
        <td>@item.start_date</td>
        <td>@item.end_date</td>
        <td>@item.application_status</td>
    </tr>
    }
</table>

